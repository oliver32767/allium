                                             <tooltip>
                                                <Tooltip text="Leave blank for a random seed" />
                                             </tooltip>
                                          </TextField>
                                          <Separator orientation="VERTICAL" />
                                                        <Button fx:id="configDiscard" mnemonicParsing="false" text="Discard" />
                                                        <Button fx:id="configApply" mnemonicParsing="false" text="Apply" />
                                                    </items>
                                                </ToolBar>
                                    <ScrollPane fitToHeight="true" fitToWidth="true" prefViewportHeight="200.0" prefViewportWidth="398.0" VBox.vgrow="ALWAYS">
                                       <content>
                                          <AnchorPane prefHeight="200.0" prefWidth="200.0">
                                             <children>
                                                <VBox fx:id="configList" prefHeight="200.0" prefWidth="100.0" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
