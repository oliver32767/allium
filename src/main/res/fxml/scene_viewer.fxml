                                <KeyCodeCombination alt="UP" code="MINUS" control="UP" meta="UP" shift="UP" shortcut="DOWN" />
                            </accelerator>
                        </MenuItem>
                        <MenuItem fx:id="menuNoZoom" mnemonicParsing="false" text="Zoom 1:1">
                            <accelerator>
                                <KeyCodeCombination alt="UP" code="DIGIT0" control="UP" meta="UP" shift="UP" shortcut="DOWN" />
                            </accelerator>
                        </MenuItem>
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <CheckMenuItem fx:id="menuTheme" mnemonicParsing="false" text="Dark Theme">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="D" control="UP" meta="UP" shift="UP" shortcut="DOWN" />
                     </accelerator>
                  </CheckMenuItem>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
