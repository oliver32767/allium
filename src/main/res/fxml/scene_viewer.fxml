                                 </children>
                              </Group>
                                </content>
                           <cursor>
                              <Cursor fx:constant="CROSSHAIR" />
                           </cursor>
                            </ScrollPane>
                     </content>
                  </Tab>
                  <Tab closable="false" text="Messages">
                    <content>
                      <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
