                                                                <ChoiceBox maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS" />
                                                            </children>
                                                        </Pane>
                                                        <Button fx:id="sceneReload" mnemonicParsing="false" text="Reload">
                                             <tooltip>
                                                <Tooltip text="Reload jar from filesystem" />
                                             </tooltip></Button>
                                                    </items>
                                                </ToolBar>
                                    <TreeTableView fx:id="sceneTree" editable="true" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                                      <columns>
                                        <TreeTableColumn fx:id="nodeName" editable="false" prefWidth="213.0" sortable="false" text="Layers" />
